<%= bootstrap_form_for(@article, :layout => :horizontal, :label_col => "col-sm-2", :control_col => "col-sm-10") do |f| %>
  <%= f.text_field :title %>
  <%= f.collection_select(:category_ids, Category.all, :id, :name, {}, {:multiple => true }) %>

  <%= f.text_area :content %>

  <%= f.submit %>
<% end %>
